<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/main_menubackground"
        android:tag="@string/tag_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mlibrary_part_one"

                >

            <include
                android:id="@+id/music_library_toolbar"
                layout="@layout/music_library_toolbar"
                />

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mlibrary_part_two"
        android:layout_below="@+id/mlibrary_part_one"
        >


            <include
                android:id="@+id/music_library_container"
                layout="@layout/music_library_container" />
         </LinearLayout>

           </RelativeLayout>


